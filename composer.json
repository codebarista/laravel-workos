{
    "name": "codebarista/laravel-workos",
    "description": "Authorize Laravel users with WorkOS.",
    "keywords": [
        "laravel",
        "workos",
        "roles",
        "permissions",
        "entitlements"
    ],
    "version": "1.0.0",
    "license": "MIT",
    "authors": [
        {
            "name": "Ralf Langebrake",
            "email": "ralf@langebrake.com"
        }
    ],
    "require": {
        "php": "^8.3",
        "laravel/workos": "^0.2"
    },
    "require-dev": {
        "laravel/pint": "^1.22",
        "orchestra/pest-plugin-testbench": "^3.0",
        "pestphp/pest-plugin-laravel": "^3.0",
        "roave/security-advisories": "dev-latest"
    },
    "autoload": {
        "psr-4": {
            "Codebarista\\LaravelWorkos\\": "src/"
        },
        "files": [
            "bootstrap/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Codebarista\\LaravelWorkos\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "./vendor/bin/pest"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Codebarista\\LaravelWorkos\\LaravelWorkosServiceProvider"
            ]
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
